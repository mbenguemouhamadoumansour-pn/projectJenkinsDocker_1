pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        EC2_HOST = '35.89.146.241' // ‚ö†Ô∏è REMPLACEZ PAR VOTRE IP EC2
        BACKEND_IMAGE = 'mouhamadoumbengue/sama-backend'
        FRONTEND_IMAGE = 'mouhamadoumbengue/sama-frontend'
        RECIPIENT_EMAIL = 'mbenguemouhamadoumansour@gmail.com'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                checkout scm
            }
        }
        
        stage('Build Backend') {
            steps {
                echo 'üî® Construction de l\'image backend...'
                script {
                    try {
                        sh "docker build -t ${BACKEND_IMAGE}:${BUILD_NUMBER} ./backend"
                        sh "docker tag ${BACKEND_IMAGE}:${BUILD_NUMBER} ${BACKEND_IMAGE}:latest"
                        echo '‚úÖ Backend image construite avec succ√®s'
                    } catch (Exception e) {
                        echo "‚ùå ERREUR lors du build backend: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("Build backend √©chou√©: ${e.message}")
                    }
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo 'üî® Construction de l\'image frontend...'
                script {
                    try {
                        sh """
                            docker build \
                                --build-arg REACT_APP_API_URL=http://${EC2_HOST}:5000/api/smartphones \
                                -t ${FRONTEND_IMAGE}:${BUILD_NUMBER} \
                                ./frontend
                        """
                        sh "docker tag ${FRONTEND_IMAGE}:${BUILD_NUMBER} ${FRONTEND_IMAGE}:latest"
                        echo '‚úÖ Frontend image construite avec succ√®s'
                    } catch (Exception e) {
                        echo "‚ùå ERREUR lors du build frontend: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("Build frontend √©chou√©: ${e.message}")
                    }
                }
            }
        }
        
        stage('Push to DockerHub') {
            steps {
                echo 'üì§ Envoi vers DockerHub...'
                script {
                    try {
                        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                        sh "docker push ${BACKEND_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${BACKEND_IMAGE}:latest"
                        sh "docker push ${FRONTEND_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${FRONTEND_IMAGE}:latest"
                        echo '‚úÖ Images pouss√©es sur DockerHub avec succ√®s'
                    } catch (Exception e) {
                        echo "‚ùå ERREUR lors du push DockerHub: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("Push DockerHub √©chou√©: ${e.message}")
                    }
                }
            }
        }
        
        stage('Deploy to EC2') {
            steps {
                echo 'üöÄ D√©ploiement sur EC2...'
                script {
                    try {
                        sshagent(['jenkins-ec2']) {
                            sh """
                                ssh -o StrictHostKeyChecking=no ubuntu@${EC2_HOST} '
                                    cd /home/ubuntu
                                    
                                    echo "üìù Cr√©ation du docker-compose.yml..."
                                    cat > docker-compose.yml << EOF
version: "3.8"

services:
  database:
    image: mongo:7
    container_name: sama-database
    ports:
      - "27017:27017"
    volumes:
      - mongodb_data:/data/db
    restart: unless-stopped
    networks:
      - sama-network

  backend:
    image: ${BACKEND_IMAGE}:latest
    container_name: sama-backend
    ports:
      - "5000:5000"
    environment:
      - NODE_ENV=production
      - PORT=5000
      - MONGODB_URI=mongodb://database:27017/samadb
    depends_on:
      - database
    restart: unless-stopped
    networks:
      - sama-network

  frontend:
    image: ${FRONTEND_IMAGE}:latest
    container_name: sama-frontend
    ports:
      - "80:80"
    depends_on:
      - backend
    restart: unless-stopped
    networks:
      - sama-network

volumes:
  mongodb_data:

networks:
  sama-network:
    driver: bridge
EOF

                                    echo "üõë Arr√™t des anciens conteneurs..."
                                    docker-compose down || true
                                    
                                    echo "üßπ Nettoyage des images inutilis√©es..."
                                    docker system prune -af
                                    
                                    echo "üì• T√©l√©chargement des nouvelles images..."
                                    docker pull ${BACKEND_IMAGE}:latest
                                    docker pull ${FRONTEND_IMAGE}:latest
                                    docker pull mongo:7
                                    
                                    echo "üöÄ D√©marrage des services..."
                                    docker-compose up -d
                                    
                                    echo "‚è≥ Attente du d√©marrage des services (15s)..."
                                    sleep 15
                                    
                                    echo "üìä V√©rification du statut des conteneurs..."
                                    docker-compose ps
                                    
                                    echo "üîç Test de l API backend..."
                                    curl -f http://localhost:5000/api/smartphones || echo "‚ö†Ô∏è Backend pas encore totalement pr√™t"
                                    
                                    echo "‚úÖ D√©ploiement termin√© avec succ√®s !"
                                '
                            """
                        }
                        echo '‚úÖ D√©ploiement sur EC2 r√©ussi'
                    } catch (Exception e) {
                        echo "‚ùå ERREUR lors du d√©ploiement EC2: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("D√©ploiement EC2 √©chou√©: ${e.message}")
                    }
                }
            }
        }
        
        stage('‚úÖ Health Check') {
            steps {
                echo 'üè• V√©rification de la sant√© de l\'application...'
                script {
                    try {
                        sleep(time: 20, unit: 'SECONDS')
                        sshagent(['jenkins-ec2']) {
                            def backendStatus = sh(
                                script: "ssh -o StrictHostKeyChecking=no ubuntu@${EC2_HOST} 'curl -s -o /dev/null -w \"%{http_code}\" http://localhost:5000/api/smartphones'",
                                returnStdout: true
                            ).trim()
                            
                            if (backendStatus == '200') {
                                echo "‚úÖ Backend fonctionne correctement (HTTP ${backendStatus})"
                            } else {
                                echo "‚ö†Ô∏è Backend r√©pond avec le code: ${backendStatus}"
                            }
                            
                            def frontendStatus = sh(
                                script: "ssh -o StrictHostKeyChecking=no ubuntu@${EC2_HOST} 'curl -s -o /dev/null -w \"%{http_code}\" http://localhost:80'",
                                returnStdout: true
                            ).trim()
                            
                            if (frontendStatus == '200') {
                                echo "‚úÖ Frontend fonctionne correctement (HTTP ${frontendStatus})"
                            } else {
                                echo "‚ö†Ô∏è Frontend r√©pond avec le code: ${frontendStatus}"
                            }
                        }
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Health check √©chou√©: ${e.message}"
                    }
                }
            }
        }
        
        stage('üßπ Cleanup') {
            steps {
                echo 'üßπ Nettoyage des images locales...'
                script {
                    sh "docker rmi ${BACKEND_IMAGE}:${BUILD_NUMBER} || true"
                    sh "docker rmi ${FRONTEND_IMAGE}:${BUILD_NUMBER} || true"
                }
            }
        }
    }
    
    post {
        always {
            script {
                sh 'docker logout || true'
            }
        }
        
